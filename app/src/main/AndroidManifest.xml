<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.apoorv.bibliotheca"
    android:versionCode="1"
    android:versionName="1.1" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-sdk
        android:minSdkVersion="13"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher4"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.apoorv.bibliotheca.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.apoorv.bibliotheca.FileChooser" >
        </activity>
        <activity
            android:name="com.apoorv.bibliotheca.BookView"
            android:label="@string/title_activity_book_view" >
        </activity>
        <activity
            android:name="com.apoorv.bibliotheca.DataView"
            android:label="@string/title_activity_data_view" >
        </activity>
        <activity
            android:name="com.apoorv.bibliotheca.AudioView"
            android:label="@string/title_activity_audio_view" >
        </activity>
    </application>

</manifest>